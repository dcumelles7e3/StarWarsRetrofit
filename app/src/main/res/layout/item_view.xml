<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:hint="http://schemas.android.com/tools"
    android:background="@color/black"
    android:layout_margin="2dp">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="@string/nombre"
        android:textColor="@color/yellow"
        android:layout_margin="5dp"/>
    <TextView
        android:id="@+id/tv_name_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:textSize="20sp"
        hint:text="Nombre: "
        android:textColor="@color/yellow"
        android:layout_margin="5dp"
        android:layout_toRightOf="@+id/tv_name"/>
    <TextView
        android:id="@+id/tv_height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="@string/estatura"
        android:layout_below="@+id/tv_name"
        android:textColor="@color/yellow"
        android:layout_margin="5dp"/>
    <TextView
        android:id="@+id/tv_height_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:textSize="20sp"
        hint:text="Nombre: "
        android:textColor="@color/yellow"
        android:layout_margin="5dp"
        android:layout_toRightOf="@+id/tv_height"
        android:layout_below="@id/tv_name"/>
    <TextView
        android:id="@+id/tv_eye"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="@string/color_ojos"
        android:layout_below="@+id/tv_height"
        android:textColor="@color/yellow"
        android:layout_margin="5dp"/>
    <TextView
        android:id="@+id/tv_eye_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:textSize="20sp"
        hint:text="Nombre: "
        android:textColor="@color/yellow"
        android:layout_margin="5dp"
        android:layout_toRightOf="@+id/tv_eye"
        android:layout_below="@id/tv_height"/>
    <TextView
        android:id="@+id/tv_birth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="@string/nacimiento"
        android:layout_below="@+id/tv_eye"
        android:textColor="@color/yellow"
        android:layout_margin="5dp"/>
    <TextView
        android:id="@+id/tv_birth_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:textSize="20sp"
        hint:text="Nombre: "
        android:textColor="@color/yellow"
        android:layout_margin="5dp"
        android:layout_toRightOf="@+id/tv_birth"
        android:layout_below="@id/tv_eye"/>

</RelativeLayout>