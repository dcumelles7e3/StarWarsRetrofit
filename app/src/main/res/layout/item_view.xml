<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="@color/black"
    android:layout_margin="2dp">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="Nombre: "
        android:textColor="@color/yellow"
        android:layout_margin="5dp"/>
    <TextView
        android:id="@+id/tv_name_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:textSize="20sp"
        android:text="Nombre: "
        android:textColor="@color/yellow"
        android:layout_margin="5dp"
        android:layout_toRightOf="@+id/tv_name"/>
    <TextView
        android:id="@+id/tv_manufacturer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="Fabricante: "
        android:layout_below="@+id/tv_name"
        android:textColor="@color/yellow"
        android:layout_margin="5dp"/>
    <TextView
        android:id="@+id/tv_manufacturer_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:textSize="20sp"
        android:text="Nombre: "
        android:textColor="@color/yellow"
        android:layout_margin="5dp"
        android:layout_toRightOf="@+id/tv_manufacturer"
        android:layout_below="@id/tv_name"/>
    <TextView
        android:id="@+id/tv_speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="Velocidad: "
        android:layout_below="@+id/tv_manufacturer"
        android:textColor="@color/yellow"
        android:layout_margin="5dp"/>
    <TextView
        android:id="@+id/tv_speed_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:textSize="20sp"
        android:text="Nombre: "
        android:textColor="@color/yellow"
        android:layout_margin="5dp"
        android:layout_toRightOf="@+id/tv_speed"
        android:layout_below="@id/tv_manufacturer"/>





</RelativeLayout>